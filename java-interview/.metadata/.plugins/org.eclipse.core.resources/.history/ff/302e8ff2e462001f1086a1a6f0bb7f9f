package com.app.pattern;

public class HillTriangle {

	public static void main(String[] args) {
 // decreasing space and increasing *
		int n=5;
		for(int i=1;i<=n;i++)
		{// print spaces decreasing
			for (int j=i;j<n;j++)
			{
				System.out.print(" ");
			}
			//print * increasing
			for (int j=1;j<=i;j++)
			{
				System.out.print("*");
			}//print * increasing skip the first one
			for (int j=1;j<i;j++)
			{
				System.out.print("*");
			}
			System.out.println();
		}
	}

}
