package com.app.pattern;

public class HillTriangle {

	public static void main(String[] args) {
 // decreasing space and increasing *
		int n=5;
		for(int i=1;i<=n;i++)
		{
			for (int j=1;j<=n;j++)
			{
				System.out.println(" ");
			}
			for (int j=1;j<=i;j++)
			{
				System.out.println("*");
			}
			for (int j=1;j<=i;j++)
			{
				System.out.println("*");
			}
		}
	}

}
